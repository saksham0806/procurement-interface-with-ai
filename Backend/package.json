{
  "name": "backend",
  "version": "1.0.0",
  "description": "Full-stack procurement automation platform",
  "main": "server.js",


  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "client-build": "cd client && npm run build",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "heroku-postbuild": "npm run client-install && npm run client-build",
    "install-production": "npm install --production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "procurement",
    "rfp",
    "rfq",
    "purchase-order",
    "vendor-management",
    "mern-stack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  }
